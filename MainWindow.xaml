        <Label x:Name="LBLcodigo" Content="Codigo" HorizontalAlignment="Left" Margin="420,82,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BTNalterar" Content="Alterar mane" HorizontalAlignment="Left" Margin="420,44,0,0" VerticalAlignment="Top" Width="89" Click="BTNalterar_Click"/>
        <Button x:Name="BTNcadastrar" Content="Cadastrar mane" HorizontalAlignment="Left" Margin="520,44,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.371,-0.089" Click="BTNcadastrar_Click"/>
