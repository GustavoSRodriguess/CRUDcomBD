        <TextBox x:Name="TBXcodigo" HorizontalAlignment="Left" Margin="487,86,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="55"/>
        <TextBox x:Name="TBXnome" HorizontalAlignment="Left" Margin="487,117,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="219"/>
        <TextBox x:Name="TBXemail" HorizontalAlignment="Left" Margin="487,149,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="219"/>
        <Button x:Name="BTNapagar" Content="Apagar mané" HorizontalAlignment="Left" Margin="619,44,0,0" VerticalAlignment="Top" Width="87" />
        <Label Content="Celular" HorizontalAlignment="Left" Margin="421,176,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TBXcelular" HorizontalAlignment="Left" Margin="487,184,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="219"/>
    </Grid>
</Window>
